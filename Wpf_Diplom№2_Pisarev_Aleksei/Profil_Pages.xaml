<Page x:Class="Wpf_Diplom_2_Pisarev_Aleksei.Profil_Pages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wpf_Diplom_2_Pisarev_Aleksei"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Profil_Pages">

    <Grid >
        <Border>
            <DockPanel>
                <Border Width="130" Height="100" Padding="3" Background="White" CornerRadius="100" DockPanel.Dock="Top" HorizontalAlignment="Center" VerticalAlignment="Top" Margin=" 0 20 0 0">
                    <Ellipse >
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Images/Images_foto.jpg" />
                        </Ellipse.Fill>
                    </Ellipse>
                        
                </Border>
            </DockPanel>
        </Border>

        <Border BorderThickness="4" BorderBrush="White" CornerRadius="20" Width="800" Height="450" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 120 0 0" >
                <Button Content="Редактировать фото" Width="200 " Height="40" FontSize="20"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
